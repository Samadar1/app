<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<?import java.net.URL?>
<AnchorPane fx:id="authPane" prefWidth="400" prefHeight="300" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.app.controllers.AuthController">
    <stylesheets>
        <URL value="@../styles/main.css"/>
    </stylesheets>

    <VBox alignment="CENTER" spacing="10" styleClass="insets-medium">
        <TextField fx:id="loginField" promptText="Логин"/>
        <PasswordField fx:id="passwordField" promptText="Пароль"/>
        <Button fx:id="loginButton" text="Войти" onAction="#handleLogin"/>
        <Button text="Зарегистрироваться" onAction="#handleRegister"/>
    </VBox>
</AnchorPane>